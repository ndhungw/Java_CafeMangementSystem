<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<StackPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CafeMangementSystem.Controllers.QuanLyMonAnController">
    <children>
        <BorderPane fx:id="QuanLyMonAn_BorderPane" maxHeight="550.0" maxWidth="750.0" disable="true">
            <top>
                <BorderPane prefHeight="70.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                    <center>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="0.0" BorderPane.alignment="CENTER" disable="true">
                            <BorderPane.margin>
                                <Insets />
                            </BorderPane.margin>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <TextField fx:id="SearchBar" promptText="Nhập từ khóa" prefWidth="250">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </TextField>
                                <ComboBox fx:id="SearchKeywordType_ComboBox" prefWidth="150.0" promptText="Chọn tiêu chí">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </ComboBox>
                                <Button fx:id="SearchButton" mnemonicParsing="false" text="Tìm kiếm" />
                            </children>
                        </HBox>
                    </center>
               <top>
                  <BorderPane maxHeight="70.0" prefHeight="70.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <left>
                        <Button mnemonicParsing="false" onMouseClicked="#ReturnButton_OnClick" text="Quay về trang chủ" BorderPane.alignment="CENTER" />
                     </left>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <center>
                        <Label text="Quản lý món ăn" BorderPane.alignment="CENTER">
                           <font>
                              <Font name="System Bold" size="26.0" />
                           </font>
                        </Label>
                     </center>
                  </BorderPane>
               </top>
                </BorderPane>
            </top>
            <center>
                <ScrollPane>
                    <content>
                        <AnchorPane id="AnchorPane" prefWidth="1100.0">
                            <children>
                                <TableView fx:id="MonAns_Table" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="clmMaMon" editable="false" prefWidth="75.0" resizable="false" text="Mã món" />
                                        <TableColumn fx:id="clmHinhAnh" editable="false" prefWidth="200.0" resizable="false" text="Hình ảnh" />
                                        <TableColumn fx:id="clmTenMon" editable="false" prefWidth="250.0" resizable="false" text="Tên món" />
                                        <TableColumn fx:id="clmGiaBan" editable="false" prefWidth="175.0" resizable="false" text="Giá món" />
                                        <TableColumn fx:id="clmTrangThaiBan" editable="false" prefWidth="200.0" resizable="false" text="Trạng thái bán" />
                                        <TableColumn fx:id="clmActions" editable="false" prefWidth="200.0" resizable="false" text="Hành động" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="70.0" prefWidth="0.0" spacing="20.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Button fx:id="AddNewButton" mnemonicParsing="false" onMouseClicked="#AddNewButton_Clicked" text="Thêm món mới" />
                        <Button fx:id="RefreshButton" mnemonicParsing="false" onMouseClicked="#RefreshButton_Clicked" text="Refresh thông tin" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
        <VBox fx:id="loadingOverlay" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <children>
                <ProgressIndicator />
            </children>
        </VBox>
    </children>
</StackPane>
