<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CafeMangementSystem.Controllers.ThemChinhSuaMonAnController">
    <children>
        <BorderPane fx:id="ThemMonAn_BorderPane" disable="true" maxHeight="350.0" maxWidth="550.0" prefHeight="350.0" prefWidth="550.0">
            <bottom>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="Add_Edit_MonAnButton" mnemonicParsing="false" onMouseClicked="#AddEditButton_OnClicked" text="Thêm mới món ăn này" />
                    </children>
                </HBox>
            </bottom>
            <top>
                <BorderPane maxHeight="75.0" prefHeight="75.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <left>
                        <HBox alignment="CENTER_LEFT" maxHeight="75.0" prefHeight="75.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="GoBackButton" mnemonicParsing="false" onMouseClicked="#GoBack_OnClicked" text="Quay lại" />
                            </children>
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </HBox>
                    </left>
                    <center>
                        <Label fx:id="pageTitle" text="Thêm món ăn mới" BorderPane.alignment="CENTER">
                            <font>
                                <Font name="System Bold" size="30.0" />
                            </font>
                        </Label>
                    </center>
                </BorderPane>
            </top>
            <center>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <center>
                        <GridPane BorderPane.alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="134.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="266.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="109.0" minHeight="10.0"  vgrow="SOMETIMES" />
                                <RowConstraints maxHeight="113.0" minHeight="10.0" prefHeight="106.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Tên món ăn (*)" textAlignment="CENTER" wrapText="true">
                                    <GridPane.margin>
                                        <Insets />
                                    </GridPane.margin>
                                </Label>
                                <Label text="Giá bán (*)" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets />
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="TenMonAn_Field" GridPane.columnIndex="1" />
                                <TextField fx:id="GiaBan_Field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </center>
                    <bottom>
                        <BorderPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <center>
                                <GridPane BorderPane.alignment="CENTER">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <TextField fx:id="imageLink_Field" editable="false" prefHeight="31.0" prefWidth="168.0" promptText="Ảnh mặc định" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                                            <children>
                                                <Button mnemonicParsing="false" onMouseClicked="#BrowseImage_OnClicked" text="Browse" />
                                                <Button mnemonicParsing="false" onMouseClicked="#ResetDefaultImage_OnClicked" text="Đặt lại mặc định" />
                                            </children>
                                        </HBox>
                                        <Label text="Chọn hình ảnh cho món ăn" GridPane.columnSpan="2" />
                                    </children>
                                    <BorderPane.margin>
                                        <Insets left="20.0" />
                                    </BorderPane.margin>
                                </GridPane>
                            </center>
                            <left>
                                <VBox fx:id="outsideImageView_VBox" alignment="CENTER" maxHeight="150.0" maxWidth="150.0" minHeight="150.0" minWidth="150.0" prefHeight="150.0" prefWidth="150.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <ImageView fx:id="MonAnImage_Display" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true">
                                            <image>
                                                <Image url="@../Default_Images/fast-food.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </VBox>
                            </left>
                        </BorderPane>
                    </bottom>
                </BorderPane>
            </center>
        </BorderPane>
        <VBox fx:id="loadingOverlay" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" visible="true">
            <children>
                <ProgressIndicator />
            </children>
        </VBox>
    </children>
</StackPane>
